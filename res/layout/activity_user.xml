<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/buttom_background">
    <RelativeLayout 
        android:id="@+id/username_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/blue_background"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/user_center"
            android:textColor="@color/white"
            android:textSize="16sp"
         
            />
        
    </RelativeLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="@color/txt_background"
        >
        <RelativeLayout 
            android:id="@+id/layout_borrow_num"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            
            >
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <TextView 
                    android:id="@+id/borrow_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/borrow_num"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/borrow_txt"
                    
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/borrow_enable"
                    android:textColor="@color/word_color"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/borrow_num"
                    />
                
            </RelativeLayout>
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <TextView 
                    android:id="@+id/txt_username_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name"
                    android:textColor="@color/word_color"
                    android:layout_centerHorizontal="true"
                    
                    />
                <TextView 
                   	android:id="@+id/txt_userid_person"
                   	android:layout_width="wrap_content"
                   	android:layout_height="wrap_content"
                   	android:text="@string/user_id"
                   	android:textColor="@color/word_color"
                   	
                   	android:layout_centerHorizontal="true"
                   	android:layout_below="@id/txt_username_person"
                    />
                
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_qian"
        />
    <RelativeLayout 
        android:id="@+id/borrow_record"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/txt_background"
        >
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_qian"
            />
        <ImageView 
            android:id="@+id/img_borrow_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <TextView 
            android:id="@+id/txt_borrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/borrow_record"
            android:textColor="@color/word_color"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_borrow_record"
            android:layout_centerVertical="true"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_qian"
        />
    <RelativeLayout 
        android:id="@+id/basic_news"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/txt_background"
        >
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_qian"
            />
        <ImageView 
            android:id="@+id/img_borrow_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <TextView 
            android:id="@+id/txt_borrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic_massage"
            android:textColor="@color/word_color"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_borrow_record"
            android:layout_centerVertical="true"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_qian"
        />
    <RelativeLayout 
        android:id="@+id/edit_data"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/txt_background"
        >
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_qian"
            />
        <ImageView 
            android:id="@+id/img_borrow_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <TextView 
            android:id="@+id/txt_borrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_massage"
            android:textColor="@color/word_color"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_borrow_record"
            android:layout_centerVertical="true"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_qian"
        />
    <RelativeLayout 
        android:id="@+id/reset_password"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/txt_background"
        >
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_qian"
            />
        <ImageView 
            android:id="@+id/img_borrow_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <TextView 
            android:id="@+id/txt_borrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_password"
            android:textColor="@color/word_color"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_borrow_record"
            android:layout_centerVertical="true"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        
    </RelativeLayout>
    
</LinearLayout>
